<script src="~/js/view/UserCust.js"></script>
<script type="text/javascript">
    $(function () {
        _me.init();
    });
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { "客戶資料管理" } })
<div class="xp-prog">
    <div id="divRead">
		<form id='formRead' class='xg-form'>
			<div class="row">
				@await Component.InvokeAsync("XiText", new XiTextDto{ Title = "帳號", Fid = "Account", InRow = true })
				@await Component.InvokeAsync("XgFindTbar", new XgFindTbarDto{  })
			</div>
			@await Component.InvokeAsync("XiText", new XiTextDto{ Title = "姓名", Fid = "Name" })
        </form>

		<div class='xg-btns-box'>
			@await Component.InvokeAsync("XgCreate")
        </div>
        <table id="tableRead" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
                    <th>帳號</th>
                    <th>姓名</th>
                    <th>手機</th>
                    <th>Email</th>
                    <th>是否公司</th>
                    <th>建檔日期</th>
                    <th>維護</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="xg-hide">
        <partial name="Edit" />
    </div>
</div>