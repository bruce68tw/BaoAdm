    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "尋寶名稱", Fid = "Name" })
    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "開始時間", Fid = "StartTime" })
    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "結束時間", Fid = "EndTime" })
    @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "上架狀態", Fid = "LaunchStatus", Required = true, Rows = ViewBag.LaunchStatuses })
