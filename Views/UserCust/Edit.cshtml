<form id='eform' class='xg-form'>
    @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "Id" })
    @await Component.InvokeAsync("XiText", new XiTextDto { Title = "帳號", Fid = "Account", Required = true,  MaxLen = 30 })
    @await Component.InvokeAsync("XiText", new XiTextDto { Title = "姓名", Fid = "Name", Required = true, MaxLen = 50 })
    @await Component.InvokeAsync("XiText", new XiTextDto { Title = "手機", Fid = "Phone", Required = true, MaxLen = 15 })
    @await Component.InvokeAsync("XiText", new XiTextDto { Title = "Email", Fid = "Email", Required = true, MaxLen = 100 })
    @await Component.InvokeAsync("XiCheck", new XiCheckDto{ Title = "資料狀態", Fid = "Status", Value = "1", Label = "啟用" })
    @await Component.InvokeAsync("XiCheck", new XiCheckDto { Title = "是否公司", Fid = "IsCorp", Label = "是" })
    @await Component.InvokeAsync("XiText", new XiTextDto { Title = "地址", Fid = "Address", Required = true, MaxLen = 255 })
    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "建檔日期", Fid = "Created" })
</form>

@await Component.InvokeAsync("XgSaveBack")

