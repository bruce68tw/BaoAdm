    @await Component.InvokeAsync("XiCheck", new XiCheckDto { Title = "是否獎金", Fid = "IsMoney", Label = "是", Edit="C" })
    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "獎品內容", Fid = "GiftName" })
    @await Component.InvokeAsync("XiTextarea", new XiTextareaDto { Title = "注意事項", Fid = "Note", MaxLen = 500, Cols = "2,6", Edit="C" })
    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "關卡數目", Fid = "StageCount" })
    @await Component.InvokeAsync("XiRead", new XiReadDto { Title = "異動日期", Fid = "Revised" })
</form>

