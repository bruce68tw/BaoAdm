<script src="~/js/view/User.js"></script>
<script type="text/javascript">
    $(function () {
        _me.init();
    });
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { "使用者管理" } })
<div class="xp-prog">
    <div id="divRead">
		<form id='formRead' class='xg-form'>
			<div class="row">
				@await Component.InvokeAsync("XiText", new XiTextDto{ Title = "姓名", Fid = "Name", MaxLen = 20, InRow = true })
				@await Component.InvokeAsync("XgFindTbar", new XgFindTbarDto{  })
			</div>
			@await Component.InvokeAsync("XiText", new XiTextDto{ Title = "帳號", Fid = "Account", MaxLen = 20 })
        </form>

		<div class='xg-btns-box'>
			@await Component.InvokeAsync("XgCreate")
        </div>
        <table id="tableRead" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
					<th>姓名</th>
					<th>帳號</th>
					<th>資料狀態</th>
					<th>是否管理者</th>
					<th>維護</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="xg-hide">
        <partial name="Edit" />
    </div>
</div>